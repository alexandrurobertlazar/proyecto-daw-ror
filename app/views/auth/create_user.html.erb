<!-- Registration form -->

<h1 class="create-user-form-title">Fill the following fields</h1>
<form action="#" method="post" class="create-user-form">
    <div>
        <label class="font-bold">User's name</label>
        <input type="text" name="name" placeholder="Name" class="create-user-form-input" required>
    </div>
    <div>
        <label class="font-bold">Phone number</label>
        <input type="tel" name="phone" placeholder="Phone number" class="create-user-form-input dark:text-black" required>
    </div>            
    <div>
        <label class="font-bold">Email address</label>
        <input type="email" name="email" placeholder="Email address" class="create-user-form-input dark:text-black" required>
    </div>
    
    <div>
        <label class="font-bold">Town / City</label>
        <input type="text" name="town" placeholder="Town or city" class="create-user-form-input dark:text-black" required>
    </div>
    <div>
        <label class="font-bold">Password</label>
        <input type="password" name="passwd" placeholder="Password" class="create-user-form-input dark:text-black" required>
    </div>
    <div>
        <label class="font-bold">ZIP / Postal code</label>
        <input type="text" name="zip" placeholder="Postal code or ZIP" class="create-user-form-input" required>
    </div>
    <div>
        <label class="font-bold">Address</label>
        <input type="text" name="address" placeholder="Address" class="create-user-form-input" required>
    </div>
    <div>
        <label class="font-bold">State / Country</label>
        <input type="text" name="state" placeholder="Choose a state or a country" class="create-user-form-input" required>
    </div>
    <input type="submit" value="Create" class="create-user-form-submit">
</form>

